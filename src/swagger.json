{
  "openapi":"3.0.0",
  "info":{
    "title":"Solid Concepts Documentation",
    "description":"This is an API Rent. Testing application of SOLID concepts",
    "version":"1.0.0",
    "contact":{
      "email":"douglas.hfonseca@gmail.com"
    }
  },
  "paths":{
    "/users":{
      "post":{
        "tags":["User"],
        "summary": "Create a User",
        "description":"Create a new User",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "email":{
                    "type":"string"
                  }
                },
                "example":{
                  "name":"name user sample",
                  "email":"email@email.com"
                }
              }
            }
          },
          "required":"true"
        },
        "responses":{
          "201":{
            "description":"Created",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string",
                      "enum":["aced8d93-7162-4014-8c48-f0e2f251f6ab"]
                    },
                    "admin":{
                      "type":"boolean",
                      "enum":[false]
                    },
                    "name":{
                      "type":"string",
                      "enum":["name user sample"]
                    },
                    "email":{
                      "type":"string",
                      "enum":["email@email.com"]
                    },
                    "created_at":{
                      "type":"string",
                      "enum":["2021-03-21T16:24:38.741Z"]
                    },
                    "updated_at":{
                      "type":"string",
                      "enum":["2021-03-21T16:24:38.741Z"]
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"Email Already Exists",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string",
                      "enum":["Email Already Exists"]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get":{
        "tags":["User"],
        "summary":"List all users",
        "description":"Only `administrator` user can access",
        "parameters":[
          {
            "in":"header",
            "name":"user_id",
            "schema":{
              "type":"string",
              "format":"uuid"
            },
            "required":"true"
          }
        ],
        "responses":{
          "200":{
            "description":"Success",
            "content":{
              "application/json":{
                "schema":{
                  "type":"array",
                  "items":{
                    "type":"object",
                    "properties":{
                      "id":{
                        "type":"string"
                      },
                      "admin":{
                        "type":"boolean"
                      },
                      "name":{
                        "type":"string"
                      },
                      "email":{
                        "type":"string"
                      },
                      "created_at":{
                        "type":"string"
                      },
                      "updated_at":{
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"User not found or User isn't administrator",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string",
                      "enum":["User not found or User isn't administrator"]
                    }
                  }
                }
              }
            }
          }
        }
      }      
    },
    "/users/{user_id}/admin":{
      "patch":{
        "tags":["User"],
        "summary":"User Admin",
        "description":"Set user admin",
        "parameters":[
          {
            "in":"path",
            "name":"user_id",
            "schema":{
              "type":"string",
              "format":"uuid"
            },
            "required":"true"
          }
        ],
        "responses":{
          "200":{
            "description":"Success",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"uuid"
                    },
                    "admin":{
                      "type":"boolean"
                    },
                    "name":{
                      "type":"string"
                    },
                    "email":{
                      "type":"string"
                    },
                    "created_at":{
                      "type":"Date"
                    },
                    "updated_at":{
                      "type":"Date"
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"User not found or User isn't administrator",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string",
                      "enum":["User not found or User isn't administrator"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}":{
      "get":{
        "tags":["User"],
        "summary":"List a User",
        "description":"List a user by ID",
        "parameters":[
          {
            "in":"path",
            "name":"user_id",
            "schema":{
              "type":"string",
              "format":"uuid"
            },
            "required":"true"
          }
        ],
        "responses":{
          "200":{
            "description":"Success",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string",
                      "enum":["aced8d93-7162-4014-8c48-f0e2f251f6ab"]
                    },
                    "admin":{
                      "type":"boolean",
                      "enum":[false]
                    },
                    "name":{
                      "type":"string",
                      "enum":["name user sample"]
                    },
                    "email":{
                      "type":"string",
                      "enum":["email@email.com"]
                    },
                    "created_at":{
                      "type":"string",
                      "enum":["2021-03-21T16:24:38.741Z"]
                    },
                    "updated_at":{
                      "type":"string",
                      "enum":["2021-03-21T16:24:38.741Z"]
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string",
                      "enum":["User not found"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
